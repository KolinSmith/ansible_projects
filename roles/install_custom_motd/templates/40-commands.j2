#!/bin/bash
# Custom MOTD Helpful Commands
# Generated by Ansible - install_custom_motd role

# Colors
YELLOW='{{ motd_color_warning }}'
CYAN='{{ motd_color_info }}'
NC='{{ motd_color_reset }}'

echo -e "${CYAN}Helpful Commands:${NC}"
echo ""

{% for cmd in motd_helpful_commands %}
printf " ${YELLOW}%-15s${NC} : %s\n" "{{ cmd.name }}" "{{ cmd.command }}"
{% endfor %}

echo ""
